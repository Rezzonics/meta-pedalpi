From: auto3000 <auto3000@users.noreply.github.com>
Date: Sat, 16 Sep 2017 11:40:25 +0200
Subject: [PATCH] build: remove msse non portable flags

---
 CMakeLists.txt | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index f71ba3a..2c269ba 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -26,11 +26,11 @@ IF(HAVE_NTK)
   link_directories   ( ${NTK_LIBRARY_DIRS}  )
 ENDIF()
 
-SET(CMAKE_SHARED_LINKER_FLAGS "-fPIC -shared -Wl,-z,nodelete -Wl,--no-undefined")
+SET(CMAKE_SHARED_LINKER_FLAGS " ${CMAKE_SHARED_LINKER_FLAGS} -fPIC -shared -Wl,-z,nodelete -Wl,--no-undefined")
 
 IF(RELEASE_BUILD)
-  SET(CMAKE_CXX_FLAGS "-g -Wall -Wno-unused-variable -msse2 -mfpmath=sse -ffast-math")
-  SET(CMAKE_C_FLAGS "-g -Wall -W -Wno-unused-variable -msse2 -mfpmath=sse -ffast-math")
+  SET(CMAKE_CXX_FLAGS " ${CMAKE_CXX_FLAGS} -Wall -Wno-unused-variable -ffast-math")
+  SET(CMAKE_C_FLAGS " ${CMAKE_C_FLAGS} -Wall -W -Wno-unused-variable -ffast-math")
 ENDIF()
 
 FILE(GLOB sources
